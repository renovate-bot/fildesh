#!/usr/bin/env fildesh

(: buildtools_dir Str .self.opt.buildtools_dir)

(: exclude_filepaths Str """\
./compat/BUILD.bazel
./src/BUILD.bazel
./src/bin/BUILD.bazel
./src/builtin/BUILD.bazel
./src/lib/BUILD.bazel
./src/lib/kv/BUILD.bazel
./src/syntax/BUILD.bazel
./test/example/BUILD.bazel
./tool/BUILD.bazel
""")

splice -o $(OF exclude) / "${exclude_filepaths}" /

pwd $(O pwd)

|< find \
  "./.github" "./compat" "./eg" "./pkg" "./src" "./test" "./tool" \
  -name "BUILD.bazel"
|- grep -v -F -f $(XF exclude)
|- splice / "./BUILD.bazel\n./MODULE.bazel\n" / -
|- replace_string "./"
|- splice -paste / $(XA pwd) "/" / -
|- xargs -d "\n" \
  fildesh -as godo "${buildtools_dir}" \
  bazel run //buildifier --
|> stdout
